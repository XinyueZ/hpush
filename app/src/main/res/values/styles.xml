<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ActionBar_ToolBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="theme">@style/AppTheme</item>
        <item name="android:popupTheme">@style/AppTheme</item>
        <item name="popupTheme">@style/AppTheme</item>
        <item name="android:background">@color/primary_color</item>
        <item name="background">@color/primary_color</item>
    </style>

    <style name="ActionBar_ToolBar_On_Item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppThemeToolBar</item>
        <item name="theme">@style/AppThemeToolBar</item>
        <item name="android:popupTheme">@style/AppThemeToolBar</item>
        <item name="popupTheme">@style/AppThemeToolBar</item>
        <item name="android:background">@color/common_transparent</item>
        <item name="background">@color/common_transparent</item>
    </style>


    <style name="List_Item_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Headline_Messages_List_Item_TextView" parent="@style/List_Item_TextView">
        <item name="font">light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:text">Headline</item>
    </style>

    <style name="Content_Messages_List_Item_TextView" parent="@style/List_Item_TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
        <item name="font">regular</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/blue_grey_50</item>
        <item name="android:text">Content</item>
    </style>

    <style name="Data_Messages_List_Item_TextView" parent="@style/List_Item_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="font">thin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/primary_dark_color</item>
        <item name="android:text">\?</item>
    </style>

    <style name="Data_Icon_Messages_List_Item_ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:background">@color/common_transparent</item>
    </style>

    <style name="FAB">
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
    </style>

    <style name="FAB_SMALL">
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ListItemCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:foreground">@color/common_transparent</item>
        <item name="android:background">@color/common_transparent</item>
        <item name="cardElevation">4dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="MaterialRippleLayout">

        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleColor">@color/primary_dark_color</item>
        <item name="mrl_rippleDelayClick">true</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleOverlay">true</item>
    </style>


    <style name="CardView" parent="@style/ListItemCardView">

    </style>


    <style name="FloatTextView">
        <item name="android:layout_width">@dimen/float_small_button_size</item>
        <item name="android:layout_height">@dimen/float_small_button_size</item>
        <item name="android:textColor">@color/text_common_white</item>
        <item name="font">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="FloatButton">
        <item name="android:layout_width">@dimen/float_button_size</item>
        <item name="android:layout_height">@dimen/float_button_size</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>




    <style name="NavDrawerItem" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@color/primary_accent</item>
        <item name="android:textColorSecondary">@color/primary_accent</item>
    </style>
</resources>
