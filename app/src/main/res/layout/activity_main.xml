<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activities.MainActivity">

    <FrameLayout
        android:background="@color/common_transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:paddingTop="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <com.hpush.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="light"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lbl_total_messages_head"
                android:textColor="@color/common_black" />

            <com.hpush.views.FontTextView
                android:id="@+id/total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textColor="@color/common_orange" />

            <com.hpush.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="light"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lbl_total_messages_tail"
                android:textColor="@color/common_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/error_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_transparent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/ActionBar_ToolBar" />

            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary_color"
                android:textColor="@color/common_white" />


        </LinearLayout>


        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_btn"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="vertical"
            android:layout_margin="@dimen/padding_float_button">


            <ImageButton
                android:id="@+id/remove_all_btn"
                android:background="@drawable/circle_pink"
                android:src="@drawable/ic_remove_all"
                style="@style/FloatButton" />

            <ImageButton
                android:id="@+id/bookmark_all_btn"
                android:background="@drawable/circle_red"
                android:src="@drawable/ic_bookmarks_all"
                style="@style/FloatButton" />


            <ImageButton
                android:id="@+id/float_main_btn"
                style="@style/FloatButton"
                android:visibility="invisible"
                android:background="@drawable/circle_orange"
                android:src="@drawable/ic_float_button_main" />
        </LinearLayout>


    </FrameLayout>

    <com.chopping.utils.views.OneDirectionScrollView
        android:layout_width="250dp"
        android:layout_gravity="left"
        android:scrollbars="none"
        android:background="@android:color/white"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/drawer_menu_ll"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <fragment
                android:name="com.hpush.app.fragments.GPlusFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/open_hack_news_home_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/selector_drawer_item_btn">

                <ImageView
                    android:layout_width="@dimen/float_small_button_size"
                    android:layout_height="@dimen/float_small_button_size"
                    android:background="@color/common_transparent"
                    android:src="@drawable/ic_hacker_news_home" />


                <com.hpush.views.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    font="thin"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/text_common_black"
                    android:text="@string/lbl_home"
                    android:background="@drawable/selector_drawer_item_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/open_setting_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/selector_drawer_item_btn">

                <ImageView
                    android:layout_width="@dimen/float_small_button_size"
                    android:layout_height="@dimen/float_small_button_size"
                    android:background="@color/common_transparent"
                    android:src="@drawable/ic_setting" />


                <com.hpush.views.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    font="thin"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/text_common_black"
                    android:text="@string/lbl_setting"
                    android:background="@drawable/selector_drawer_item_btn" />
            </LinearLayout>


            <FrameLayout
                android:id="@+id/app_list_fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </com.chopping.utils.views.OneDirectionScrollView>

</android.support.v4.widget.DrawerLayout>