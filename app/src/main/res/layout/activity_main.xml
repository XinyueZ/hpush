<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_transparent">


        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingTop="?attr/actionBarSize">

            <com.hpush.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/lbl_total_messages_head"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/common_black"
                app:font="light" />

            <com.hpush.views.FontTextView
                android:id="@+id/total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/common_orange" />

            <com.hpush.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/lbl_total_messages_tail"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/common_black"
                app:font="light" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/error_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_transparent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/ActionBar_ToolBar" />

            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary_color"
                android:textColor="@color/common_white" />


        </LinearLayout>


        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="vertical">

            <com.software.shell.fab.ActionButton
                android:id="@+id/float_search_btn"
                style="@style/FAB_SMALL"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                app:button_color="@color/fab_material_grey_500"
                app:button_colorPressed="@color/fab_material_grey_900"
                app:hide_animation="@anim/fab_jump_to_down"
                app:image="@drawable/ic_search"
                app:rippleEffect_enabled="true"
                app:shadowResponsiveEffect_enabled="true"
                app:shadow_radius="@dimen/common_elevation"
                app:show_animation="@anim/fab_jump_from_down"
                app:type="MINI" />

            <com.software.shell.fab.ActionButton
                android:id="@+id/remove_all_btn"
                style="@style/FAB_SMALL"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                app:button_color="@color/fab_material_pink_500"
                app:button_colorPressed="@color/fab_material_pink_900"
                app:hide_animation="@anim/fab_jump_to_down"
                app:image="@drawable/ic_remove_all"
                app:rippleEffect_enabled="true"
                app:shadowResponsiveEffect_enabled="true"
                app:shadow_radius="@dimen/common_elevation"
                app:show_animation="@anim/fab_jump_from_down"
                app:type="MINI" />


            <com.software.shell.fab.ActionButton
                android:id="@+id/bookmark_all_btn"
                style="@style/FAB_SMALL"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                app:button_color="@color/fab_material_green_500"
                app:button_colorPressed="@color/fab_material_green_900"
                app:hide_animation="@anim/fab_jump_to_down"
                app:image="@drawable/ic_bookmarks_all"
                app:rippleEffect_enabled="true"
                app:shadowResponsiveEffect_enabled="true"
                app:shadow_radius="@dimen/common_elevation"
                app:show_animation="@anim/fab_jump_from_down"
                app:type="MINI" />





            <com.software.shell.fab.ActionButton
                android:id="@+id/float_main_btn"
                style="@style/FAB"
                android:layout_gravity="end"
                app:button_color="@color/fab_material_red_500"
                app:button_colorPressed="@color/fab_material_red_900"
                app:hide_animation="@anim/fab_jump_to_down"
                app:image="@drawable/ic_float_button_main"
                app:rippleEffect_enabled="true"
                app:shadowResponsiveEffect_enabled="true"
                app:shadow_radius="@dimen/common_high_elevation"
                app:show_animation="@anim/fab_jump_from_down"
                app:type="DEFAULT" />


        </LinearLayout>
    </FrameLayout>

    <com.chopping.utils.views.OneDirectionScrollView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white"
        android:scrollbars="none">


        <LinearLayout
            android:id="@+id/drawer_menu_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<fragment--><!--android:name="com.hpush.app.fragments.GPlusFragment"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content" />-->
            <FrameLayout
                android:id="@+id/gplus_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/open_hack_news_home_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_drawer_item_btn"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/float_small_button_size"
                    android:layout_height="@dimen/float_small_button_size"
                    android:background="@color/common_transparent"
                    android:src="@drawable/ic_hacker_news_home" />


                <com.hpush.views.FontTextView
                    font="thin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_drawer_item_btn"
                    android:gravity="left|center_vertical"
                    android:text="@string/lbl_home"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/text_common_black" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/open_recent_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_drawer_item_btn"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/float_small_button_size"
                    android:layout_height="@dimen/float_small_button_size"
                    android:background="@color/common_transparent"
                    android:src="@drawable/ic_recent" />


                <com.hpush.views.FontTextView
                    font="thin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_drawer_item_btn"
                    android:gravity="left|center_vertical"
                    android:text="@string/lbl_recent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/text_common_black" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/open_setting_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_drawer_item_btn"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/float_small_button_size"
                    android:layout_height="@dimen/float_small_button_size"
                    android:background="@color/common_transparent"
                    android:src="@drawable/ic_setting" />


                <com.hpush.views.FontTextView
                    font="thin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_drawer_item_btn"
                    android:gravity="left|center_vertical"
                    android:text="@string/lbl_setting"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/text_common_black" />
            </LinearLayout>


            <FrameLayout
                android:id="@+id/app_list_fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </com.chopping.utils.views.OneDirectionScrollView>

</android.support.v4.widget.DrawerLayout>